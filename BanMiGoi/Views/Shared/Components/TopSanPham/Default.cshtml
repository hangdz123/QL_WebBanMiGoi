@model List<MonAn>

<div class="aside">
    <h3 class="aside-title">Bán chạy</h3>
    @foreach (var menuItem in Model)
    {
        <div class="product-widget">
            <a href="javascript:void(0);" onclick="redirectToDetails('@menuItem.MaMon')">
                <div class="product-img">
                    <img src="~/new1/img/@menuItem.HinhAnh" alt="">
                </div>
                <div class="product-body">
                    <p class="product-category">@menuItem.TenNhom</p>
                    <h3 class="product-name"><a href="#">@menuItem.TenMon</a></h3>
                    <h4 class="product-price">@menuItem.GiaBan.ToString("N0") VNĐ <del class="product-old-price"></del></h4>
                </div>
            </a>
        </div>
    }
</div>

<script>
    function redirectToDetails(id) {
        // Chuyển hướng đến trang chi tiết với id của món ăn
        window.location.href = "/Product/Details/" + id;
    }
</script>
