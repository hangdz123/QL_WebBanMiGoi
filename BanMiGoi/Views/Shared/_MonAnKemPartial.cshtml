

<div class="modal-body" id="monAnKemModalContent">
    <div class="tab-content">
        <div id="tab-1" class="tab-pane fade show p-0 active">
            <div class="row g-4">
                @foreach (var monAnKem in Model)
                {
                    <div class="col-lg-6">
                        <div class="d-flex align-items-center">
                            <img class="flex-shrink-0 img-fluid rounded" src="~/img/food/@monAnKem.HinhAnh" alt="Món ăn kèm" style="width: 80px;">
                            <div class="w-100 d-flex flex-column text-start ps-4">
                                <h5 class="d-flex justify-content-between border-bottom pb-2">
                                    <span>@monAnKem.TenMon</span>
                                    <span class="text-primary">@monAnKem.GiaBan</span>
                                </h5>
                                <small class="fst-italic"></small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
