@model ThanhThoaiRestaurant.Models.HoaDonViewModel
@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>

    .table tbody tr td {
        text-align: center !important;
        vertical-align: middle;
        border: 1px solid transparent !important;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05) !important;
    }


    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .ms-content-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .ms-panel {
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background-color: #ffffff;
        width: 80%; /* Đặt chiều rộng cho panel */
        margin: 20px auto; /* Canh giữa */
    }

    .ms-panel-body {
        padding: 20px;
    }

    .section-title {
        color: #FF5733;
        border-bottom: 2px solid #FF5733;
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-size: 24px; /* Kích thước chữ tiêu đề */
    }

    .ms-profile-information th,
    .ms-profile-information td {
        padding: 12px; /* Padding tăng giảm khoảng cách */
        border-bottom: 1px solid #eee; /* Đường kẻ giữa các hàng */
    }

    .ms-profile-information th {
        width: 200px;
        font-weight: bold;
        background-color: #f0f0f0;
        border-radius: 5px;
    }

    .ms-profile-information td {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    #data-table-5 {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse; /* Loại bỏ đường kẻ của table */
    }

        #data-table-5 th,
        #data-table-5 td {
            text-align: left;
            padding: 15px;
        }

        #data-table-5 th {
            font-weight: bold;
            background-color: #4285f4;
            color: white;
        }

        #data-table-5 tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        #data-table-5 tbody tr:hover {
            background-color: #f0f0f0;
        }

    .btn-secondary {
        background-color: #FF5733;
        color: white;
        margin-top: 20px;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s;
    }

    .btn-secondary:hover {
            background-color: #d14836;
    }

    

</style>


<div class="col-6 mb-60" style="margin-left: 350px;">
    <h4 class="checkout-title" style="color: #27c4d1; font-size: 25px; font-weight: bold; text-align: center; margin-top: 20px;">THÔNG TIN ĐƠN HÀNG</h4>
    <div class="col-md-12 d-flex mb-5" style="border: solid 2px gray;">
        <div class="cart-detail cart-total p-3 p-md-4">
            <p class="d-flex">
                <span>Mã đơn hàng:</span>
                <span style="margin-left: 200px;">@Model.MaDonHang</span>
            </p>
            <p class="d-flex">
                <span>Ngày đặt hàng:</span>
                <span style="margin-left: 200px;">@Model.NgayDatHang</span>
            </p>
           
            <p class="d-flex">
                <span>Ghi chú:</span>
                <span style="margin-left: 200px;">@Model.GhiChu</span>
            </p>
            <hr>
            <p class="d-flex">
                <span style="font-weight: bold; color: black; font-size: 18px;">Sản phẩm </span>
                <span style="font-weight: bold; color: black; font-size: 18px; margin-left: 200px;">Thành tiền</span>
            </p>

            @foreach (var chiTiet in Model.ChiTietHoaDon)
            {
                <p class="d-flex">
                    <span>@chiTiet.SoLuongCt x @chiTiet.TenMon  <img style="height:80px; margin-left:30px;" src="~/new1/img/@chiTiet.HinhAnhHd" alt=""> </span>
                    <span style="margin-top: 30px; margin-left: 200px;">@chiTiet.ThanhTien.ToString("N0") VNĐ</span>
                </p>
            }
            <hr>
            <p class="d-flex">
                <span>Tổng tiền:</span>
                <span style="margin-left: 200px;">@Model.TongTien.ToString("N0") VNĐ</span>
            </p>
            <p class="d-flex">
                <span>Phí vận chuyển:</span>
                <span style="margin-left: 200px;">0 VNĐ</span>
            </p>
            <p class="d-flex">
                <span>Giảm giá:</span>
                <span style="margin-left: 200px;">@Model.TienGiam.ToString("N0") VNĐ</span>
            </p>
            <hr>
            <p class="d-flex total-price">
                <span style="font-weight: bold; color: black;">Tiền thanh toán:</span>
                <span style="margin-left: 200px;">@Model.TienTt.ToString("N0") VNĐ</span>
            </p>
        </div>
    </div>
    <a href="@Url.Action("Index")" class="btn btn-secondary" style="background-color: #FF5733; color: white; margin-left: 620px; width:100px;">Trở về</a>
</div>


