@model ThanhThoaiRestaurant.Models.NguoiDung

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* CSS cho các phần tử login */
    .login-register-wrapper {
        text-align: center;
    }

    .login-register-form {
        max-width: 400px; /* Đảm bảo form không quá rộng */
        margin: 0 auto; /* Căn giữa form */
        padding: 30px; /* Khoảng cách giữa form và viền */
        background-color: #f8f9fa; /* Màu nền cho form */
        border-radius: 8px; /* Bo tròn viền form */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Hiệu ứng đổ bóng */
    }

    /* CSS cho tiêu đề "Quên mật khẩu" */
    .form-title {
        margin-bottom: 20px; /* Khoảng cách giữa tiêu đề và các input */
    }

    /* CSS cho input và nút xác nhận */
    .form-control {
        width: 100%; /* 100% chiều rộng */
        margin-bottom: 20px; /* Khoảng cách giữa các input */
        padding: 12px; /* Khoảng cách bên trong input */
        font-size: 16px; /* Kích thước chữ */
        border: 1px solid #ced4da; /* Viền input */
        border-radius: 4px; /* Bo tròn viền input */
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out; /* Hiệu ứng chuyển đổi */
    }

        .form-control:focus {
            border-color: #007bff; /* Màu viền khi input được focus */
            outline: 0; /* Loại bỏ đường viền xung quanh */
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Hiệu ứng đổ bóng khi input được focus */
        }

    .btn-confirm {
        width: 100%; /* 100% chiều rộng */
        padding: 12px; /* Khoảng cách bên trong nút */
        font-size: 16px; /* Kích thước chữ */
        border: none; /* Loại bỏ viền */
        border-radius: 4px; /* Bo tròn viền nút */
        background-color: #007bff; /* Màu nền nút */
        color: #fff; /* Màu chữ */
        cursor: pointer; /* Con trỏ chuột là pointer */
        transition: background-color 0.15s ease-in-out; /* Hiệu ứng chuyển đổi */
    }

        .btn-confirm:hover {
            background-color: #0056b3; /* Màu nền nút khi di chuột vào */
        }
</style>



<div class="main-content-wrap section-ptb lagin-and-register-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 m-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-form">
                        <h4 class="form-title">Quên mật khẩu</h4>
                        <form asp-controller="Account" asp-action="ConfirmAndSendEmail" method="post">
                            <div class="form-group">
                                <input type="email" id="email" name="email" class="form-control" placeholder="Địa chỉ Email" required />
                            </div>
                            <div class="remember-me">
                                <a href="Register">Tạo tài khoản mới?</a>
                            </div>
                            <button type="submit" class="btn btn-confirm" style="margin-top: 50px;">Xác nhận</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="alert alert-danger" role="alert" style="text-align:center;">
        @TempData["Message"]
    </div>
}