@model ThanhThoaiRestaurant.Models.HoaDonViewModel
@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>

    .table tbody tr td {
        text-align: center !important;
        vertical-align: middle;
        border: 1px solid transparent !important;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05) !important;
    }


    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .ms-content-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .ms-panel {
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background-color: #ffffff;
        width: 80%; /* Đặt chiều rộng cho panel */
        margin: 20px auto; /* Canh giữa */
    }

    .ms-panel-body {
        padding: 20px;
    }

    .section-title {
        color: #FF5733;
        border-bottom: 2px solid #FF5733;
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-size: 24px; /* Kích thước chữ tiêu đề */
    }

    .ms-profile-information th,
    .ms-profile-information td {
        padding: 12px; /* Padding tăng giảm khoảng cách */
        border-bottom: 1px solid #eee; /* Đường kẻ giữa các hàng */
    }

    .ms-profile-information th {
        width: 200px;
        font-weight: bold;
        background-color: #f0f0f0;
        border-radius: 5px;
    }

    .ms-profile-information td {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }

    #data-table-5 {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse; /* Loại bỏ đường kẻ của table */
    }

        #data-table-5 th,
        #data-table-5 td {
            text-align: left;
            padding: 15px;
        }

        #data-table-5 th {
            font-weight: bold;
            background-color: #4285f4;
            color: white;
        }

        #data-table-5 tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        #data-table-5 tbody tr:hover {
            background-color: #f0f0f0;
        }

    .btn-secondary {
        background-color: #FF5733;
        color: white;
        margin-top: 20px;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #d14836;
        }

