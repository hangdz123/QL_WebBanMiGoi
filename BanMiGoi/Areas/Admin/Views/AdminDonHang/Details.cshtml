<main id="main" class="main">
    <div class="col-6 mb-60" style="margin-left: 300px;">
        <h4 class="checkout-title" style="color: #27c4d1; font-size: 25px; font-weight: bold; text-align: center;">THÔNG TIN ĐƠN HÀNG</h4>
        <div class="col-md-12 d-flex mb-5" style="border: solid 2px gray; flex-direction: column;">
            <div class="cart-detail cart-total p-3 p-md-4">
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;">Mã đơn hàng:</span>
                    <span style="flex: 1;">@Model.MaDonHang</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;">Ngày đặt hàng:</span>
                    <span style="flex: 1;">@Model.NgayDatHang</span>
                </p>
               
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;">Ghi chú:</span>
                    <span style="flex: 1;">@Model.GhiChu</span>
                </p>
                <hr>
                <p class="d-flex">
                    <span style="flex: 1; font-weight: bold; color: black; font-size: 18px; margin-left: 80px;">Món ăn </span>
                    <span style="flex: 1; font-weight: bold; color: black; font-size: 18px;">Thành tiền</span>
                </p>

                @foreach (var chiTiet in Model.ChiTietHoaDon)
                {
                    <p class="d-flex">
                        <span style="flex: 1; margin-left: 80px;">@chiTiet.SoLuongCt x @chiTiet.TenMon <img style="height:80px; margin-left:30px;" src="~/new1/img/@chiTiet.HinhAnhHd" /> </span>
                        <span style="flex: 1;">@chiTiet.ThanhTien.ToString("N0") VNĐ</span>
                    </p>
                }
                <hr>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;">Tổng tiền:</span>
                    <span style="flex: 1;">@Model.TongTien.ToString("N0") VNĐ</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;">Phí vận chuyển:</span>
                    <span style="flex: 1;">0 VNĐ</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;">Giảm giá:</span>
                    <span style="flex: 1;">@Model.TienGiam.ToString("N0") VNĐ</span>
                </p>
                <hr>
                <p class="d-flex total-price">
                    <span style="flex: 1; font-weight: bold; color: black; margin-left: 80px;">TIỀN THANH TOÁN:</span>
                    <span style="flex: 1; font-weight: bold; color: black; font-size: 17px;">@Model.TienTt.ToString("N0") VNĐ</span>
                </p>
            </div>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-secondary" style="background-color: #FF5733; color: white; margin-left: 480px; width:100px;">Trở về</a>
    </div>

</main>

