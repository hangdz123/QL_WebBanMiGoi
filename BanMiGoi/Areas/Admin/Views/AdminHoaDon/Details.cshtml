@model ThanhThoaiRestaurant.Models.HoaDonViewModel
@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .ms-content-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .ms-panel {
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        background-color: #ffffff;
    }

    .ms-panel-body {
        padding: 20px;
    }

    .section-title {
        color: #FF5733;
        border-bottom: 2px solid #FF5733;
        padding-bottom: 10px;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .ms-profile-information th {
        width: 200px;
        font-weight: bold;
        background-color: #f0f0f0;
        padding: 10px;
        border-radius: 5px;
    }

    .ms-profile-information td {
        max-width: 300px;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        padding: 10px;
    }

    #data-table-5 {
        width: 100%;
        margin-top: 20px;
    }

        #data-table-5 th,
        #data-table-5 td {
            text-align: left;
            padding: 15px;
        }

        #data-table-5 th {
            font-weight: bold;
            background-color: #4285f4;
            color: white;
            border: 1px solid #f8f9fa;
        }

        #data-table-5 tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        #data-table-5 tbody tr:hover {
            background-color: #f0f0f0;
        }

    .btn-secondary {
        background-color: #FF5733;
        color: white;
        margin-top: 20px;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        display: inline-block;
        transition: background-color 0.3s;
    }

        .btn-secondary:hover {
            background-color: #d14836;
        }
</style>


<div class="ms-content-wrapper">
    <div class="row">
        <div class="col-md-12">


            <div class="ms-panel ms-panel-fh">
                <div class="ms-panel-body">
                    <h4 class="section-title bold">Thông tin</h4>
                    <table class="table ms-profile-information">
                        <tbody style="text-align: center;">
                            <tr>
                                <th scope="row">Mã hoá đơn</th>
                                <td> @Model.MaHd </td>
                            </tr>
                            <tr>
                                <th scope="row">Ngày hoá đơn</th>
                                <td> @Model.NgayHd </td>
                            </tr>
                            <tr>
                                <th scope="row">Họ tên người nhận</th>
                                <td> @Model.TenKh </td>
                            </tr>
                            <tr>
                                <th scope="row">Số điện thoại</th>
                                <td>@Model.Sdtkh </td>
                            </tr>                                               
                            
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-sm-12">
                            <div class="checkout-cart-total" style="background-color: #f0f0f0; padding: 20px; border: 1px solid #ccc; color: black;">
                                <h5 style=" margin-left: 100px;">Món ăn <span style="margin-left: 170px">Thành tiền</span></h5>
                                <ul>
                                    @foreach (var chiTiet in Model.ChiTietHoaDon)
                                    {
                                        <li style="font-size:20px; display: flex; margin-left: 50px;"> @chiTiet.SoLuongCt x @chiTiet.TenMon  <span style="margin-left: 130px;">@chiTiet.ThanhTien.ToString("N0") VNĐ</span></li>
                                    }
                                </ul>
                                <hr style="border: none; height: 2px; background-color: gray; opacity: 0.5; margin: 8px 0;">
                                <p style="font-size:20px; margin-left: 80px;">Tổng tiền: <span style="margin-left: 150px">@Model.TongTien.ToString("N0") VNĐ</span></p>
                                <p style="font-size:20px; margin-left: 80px;">Phí vận chuyển: <span style="margin-left: 100px">Miễn phí</span></p>
                                <p style="font-size:20px; margin-left: 80px;">Giảm giá: <span style="margin-left: 150px">@Model.TienGiam.ToString("N0") VNĐ</span></p>
                                <hr style="border: none; height: 2px; background-color: gray; opacity: 0.5; margin: 8px 0;">
                                <h4 style="font-size:20px; margin-left: 80px;">Tiền thanh toán: <span style="margin-left: 80px">@Model.TienTt.ToString("N0") VNĐ</span></h4>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>









        <a href="@Url.Action("Index")" class="btn btn-secondary" style="background-color: #FF5733; color: white; margin-left: 20px; width:100px;">Trở về</a>
    </div>



</div>


