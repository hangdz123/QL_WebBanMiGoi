<main id="main" class="main">
    <div class="col-6 mb-60" style="margin-left: 300px;">
        <h4 class="checkout-title" style="color: #27c4d1; font-size: 30px; font-weight: 900; text-align: center;">THÔNG TIN NHÂN VIÊN</h4>
        <div class="col-md-12 d-flex mb-5" style="border: solid 2px gray; flex-direction: column;">
            <div class="cart-detail cart-total p-3 p-md-4">
                <p class="d-flex">
                    <img style="height: 100px; margin-left: 200px;" src="~/img/customers/1.png" alt="Ảnh khách hàng" class="customer-image">
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px; font-size: 17px; font-weight: 700;">Mã nhân viên:</span>
                    <span style="flex: 1; font-size: 17px; font-weight: 700;">@Model.MaNv</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px; font-size: 17px; font-weight: 700;">Họ tên:</span>
                    <span style="flex: 1; font-size: 17px; font-weight: 700;">@Model.TenNv</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;font-size: 17px; font-weight: 700;">Giới tính:</span>
                    <span style="flex: 1; font-size: 17px; font-weight: 700;">@Model.GioiTinhNv</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;font-size: 17px; font-weight: 700;">Ngày sinh:</span>
                    <span style="flex: 1; font-size: 17px; font-weight: 700;">@Model.NgaySinhNv</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;font-size: 17px; font-weight: 700;">Ngày vào làm:</span>
                    <span style="flex: 1; font-size: 17px; font-weight: 700;">@Model.NgayVl</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;font-size: 17px; font-weight: 700;">Chức vụ:</span>
                    <span style="flex: 1; font-size: 17px; font-weight: 700;">@Model.ChucVu</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;font-size: 17px; font-weight: 700;">Số điện thoại:</span>
                    <span style="flex: 1; font-size: 17px; font-weight: 700;">@Model.Sdtnv</span>
                </p>
                <p class="d-flex">
                    <span style="flex: 1; margin-left: 80px;font-size: 17px; font-weight: 700;">Địa chỉ:</span>
                    <span style="flex: 1; font-size: 17px; font-weight: 700;">@Model.DiaChiNv</span>
                </p>
                
               

               
            </div>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-secondary" style="background-color: #FF5733; color: white; margin-left: 480px; width:100px;">Trở về</a>
    </div>

</main>

